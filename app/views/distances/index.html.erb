<table class="table is-fullwidth is-hoverable is-bordered">
  <thead>
    <tr>
      <th>Source Address</th>
      <th>Destination Address</th>
      <th>Distance</th>
    </tr>
  </thead>
  <tbody>
        <% @distances.each do |distance| %>
            <tr>
                <td><%= distance.to_address.address %></td>
                <td><%= distance.from_address.address %></td>
                <td><%= link_to distance.distance, distance %></td>
            </tr>
        <% end %>
  </tbody>
</table>